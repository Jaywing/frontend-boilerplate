{% from "_macros/_open-graph.njk" import OpenGraph %}
{% from "_macros/_seo.njk" import Seo %}
{% from "_macros/_twitter-card.njk" import TwitterCard %}

<!DOCTYPE html>
<html lang="en" class="u-h-full">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {{ Seo({
      "seoTitle": "Page title",
      "seoDescription": "Page description"
    }) }}

    {{ OpenGraph({
      "ogTitle": "Page title",
      "ogDescription": "Page description",
      "ogUrl": "https://",
      "ogImageSrc": "https://",
      "ogImageWidth": "1200",
      "ogImageHeight": "630"
    }) }}

    {{ TwitterCard({
      "twitterCard": "",
      "twitterSite": "@username",
      "twitterTitle": "Page title",
      "twitterDescription": "Page description",
      "twitterImage": "https://",
      "twitterImageAlt": ""
    }) }}

    {% block styles %}
      <link rel="stylesheet" type="text/css" href="/_assets/css/index.css">
    {% endblock %}
  </head>

  <body class="u-flex u-flex-col u-min-h-full" id="top">
    {% block cookie_alert %}
      <div id="cookies-alert" class="c-cookies-alert">
        <p>This site uses cookies to make sure you have the best experience.
          <a href="#">Read our cookie policy</a>
        </p>
        <button id="close-cookies-alert" class="c-button" role="button">Close</button>
      </div>
    {% endblock %}

    {% block skip_link %}
      <div class="u-hidden">
        <a href="#content">Skip to Main Content</a>
      </div>
    {% endblock %}

    <header class="u-bg-black u-text-white">
      {% block header %}
        <div class="u-container u-mx-auto u-p-4 u-flex">
          <a href="/">Logo</a>
          <a href="/prototype/" class="u-ml-auto">Prototype</a>
        </div>
      {% endblock %}
    </header>

    <main id="content">
      {% block main %}{% endblock %}
    </main>

    <footer class="u-mt-auto u-bg-black u-text-white">
      {% block footer %}
        <div class="u-container u-mx-auto u-p-4">
          <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Quod, aperiam?</p>
        </div>
      {% endblock %}
    </footer>

    {% block scripts %}
      <script src="/_assets/js/index.js"></script>
    {% endblock %}
  </body>
</html>
