{% from "_macros/_open-graph.njk" import OpenGraph %}
{% from "_macros/_seo.njk" import Seo %}
{% from "_macros/_twitter-card.njk" import TwitterCard %}

<!DOCTYPE html>
<html lang="en" class="u-h-full">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {{ Seo({
      "seoTitle": "Page title",
      "seoDescription": "Page description"
    }) }}

    {{ OpenGraph({
      "ogTitle": "Page title",
      "ogDescription": "Page description",
      "ogUrl": "https://",
      "ogImageSrc": "https://",
      "ogImageWidth": "1200",
      "ogImageHeight": "630"
    }) }}

    {{ TwitterCard({
      "twitterCard": "",
      "twitterSite": "@username",
      "twitterTitle": "Page title",
      "twitterDescription": "Page description",
      "twitterImage": "https://",
      "twitterImageAlt": ""
    }) }}

    {% block styles %}
      <link rel="stylesheet" type="text/css" href="/_assets/css/index.css">
    {% endblock %}
  </head>

  <body class="l-page" id="top">
    {% block cookie_alert %}
      <div id="cookies-alert" class="c-cookies-alert">
        <p>This site uses cookies to make sure you have the best experience.
          <a href="#">Read our cookie policy</a>
        </p>

        <button class="c-btn" role="button" data-js="Toggler" data-js-options='[{"target": "#cookies-alert"}]'>Close</button>
      </div>
    {% endblock %}

    {% block skip_link %}
      <div class="u-sr-only">
        <a href="#content">Skip to Main Content</a>
      </div>
    {% endblock %}

    <header class="c-header">
      {% block header %}
        <div class="l-container u-flex">
          <a href="/"><img src="//via.placeholder.com/100x30?text=Logo" alt="Logo"></a>
          <a href="/lab/" class="u-ml-auto">Lab</a>
        </div>
      {% endblock %}
    </header>

    <main id="content">
      {% block main %}{% endblock %}
    </main>

    <footer class="c-footer u-mt-auto">
      {% block footer %}
        <div class="l-container">
          <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Quod, aperiam?</p>
        </div>
      {% endblock %}
    </footer>

    {% block scripts %}
      <script src="/_assets/js/index.js"></script>
    {% endblock %}
  </body>
</html>
