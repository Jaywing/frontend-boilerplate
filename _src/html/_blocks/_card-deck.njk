{% macro CardDeck(options) -%}

  {% if options.title %}
    <h2 class="mb-2">{{ options.title }}</h2>
  {% endif %}

  <div class="row">
    {% for i in options.cards %}
      <div class="col-md-3">
        <div class="card h-100">
          {% if i.img %}
            <img data-src="{{ i.img.src }}" class="card-img-top js-lazy" alt="{{ i.img.alt }}" width="600" height="400">
          {% endif %}

          <div class="card-body">
            {% if i.heading %}
              <h5 class="card-title">{{ i.heading }}</h5>
            {% endif %}

            {% if i.body %}
              <p class="card-text">{{ i.body }}</p>
            {% endif %}

            {% if i.cta %}
              <a href="{{ i.cta.link }}" class="btn btn-primary">{{ i.cta.label }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

{%- endmacro %}

