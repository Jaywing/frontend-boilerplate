{
  "name": "frontend-boilerplate",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git@github.com:Jaywing/frontend-boilerplate.git"
  },
  "keywords": [
    "gulp 4",
    "nunjucks",
    "webpack",
    "typescript"
  ],
  "author": "joe.diton@jaywing.com",
  "license": "ISC",
  "homepage": "https://github.com/Jaywing/frontend-boilerplate",
  "main": "gulpfile.js",
  "paths": {
    "staticDir": "./static/",
    "proxyAddress": "https://",
    "css": {
      "src": "./src/scss/**/",
      "staticDest": "./static/assets/css/",
      "proxyDest": "./Umbraco/assets/css/"
    },
    "fonts": {
      "src": [
        "./src/webfonts/**/*.+(ttf|otf|woff|woff2|eot|svg)",
        "./node_modules/@fortawesome/fontawesome-free/webfonts/*.+(ttf|otf|woff|woff2|eot|svg)"
      ],
      "staticDest": "./static/assets/webfonts/",
      "proxyDest": "./Umbraco/assets/webfonts/"
    },
    "html": {
      "staticSrc": "./src/html/**/",
      "staticData": "src/html/data.json",
      "staticDest": "./static/",
      "proxyWatch": "./Umbraco/**/*.cshtml"
    },
    "images": {
      "src": "./src/images/**/*.+(png|jpg|jpeg|gif|svg)",
      "staticDest": "./static/assets/images/",
      "proxyDest": "./Umbraco/assets/images/"
    },
    "js": {
      "src": "./src/ts/**/",
      "webpackEntry": {
        "main": "./src/ts/main.ts"
      },
      "webpackOutput": {
        "path": "static/assets",
        "publicPath": "/assets/"
      },
      "staticDest": "./static/assets/",
      "proxyDest": "./Umbraco/assets/"
    }
  },
  "prettier": {
    "tabWidth": 2
  },
  "browserslist": [
    "> 1%",
    "IE >= 11"
  ],
  "browserSync": {
    "open": false
  },
  "scripts": {
    "start": "gulp --maps --max-old-space-size=8192",
    "build": "gulp build --minify --purge",
    "prettier": "prettier --write \"./src/**/*.{scss,ts,tsx,js,jsx,json}\""
  },
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "browser-sync": "^2.26.10",
    "cssnano": "^4.1.10",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-nunjucks": "^5.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-purgecss": "^2.3.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-util": "^3.0.8",
    "prettier": "^2.0.2",
    "purgecss": "^2.3.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-twbs-bootstrap": "^2.0.3",
    "stylelint-prettier": "^1.1.2",
    "ts-loader": "^8.0.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-stream": "^5.2.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "bootstrap": "4.5.0",
    "es6-promise": "^4.2.8",
    "vanilla-lazyload": "^17.1.0"
  }
}
