{
  "name": "front-end-build-pack",
  "description": "This README would normally document whatever steps are necessary to get your application up and running.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/joe_diton/buildsystem.git"
  },
  "keywords": [
    "gulp",
    "nunjucks",
    "webpack"
  ],
  "author": "Joe Diton",
  "license": "ISC",
  "homepage": "https://bitbucket.org/joe_diton/buildsystem#readme",
  "main": "gulpfile.js",
  "paths": {
    "static_folder": "./_static/",
    "proxy_address": "",
    "css": {
      "src": "./_src/scss/**/",
      "static_dest": "./_static/_assets/css/",
      "proxy_dest": ""
    },
    "html": {
      "src": "./_src/html/**/",
      "static_dest": "./_static/"
    },
    "js": {
      "src": "./_src/ts/**/",
      "static_dest": "./_static/_assets/",
      "proxy_dest": ""
    }
  },
  "browserslist": "> 2%",
  "browserSync": {
    "open": false,
    "server": {
      "baseDir": "./_static"
    }
  },
  "scripts": {
    "start": "gulp --maps",
    "build": "gulp build --minify"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-eslint": "^5.0.0",
    "gulp-nunjucks": "^5.0.0",
    "gulp-purgecss": "^1.2.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-util": "^3.0.8",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-stream": "^5.2.1"
  },
  "dependencies": {
    "bootstrap": "^4.3.1"
  }
}
