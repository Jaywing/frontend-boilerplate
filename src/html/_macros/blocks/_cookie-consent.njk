{% macro CookieConsent(data) -%}
  <div class="cookies-consent" role="dialog" data-js="CookieConsent">
    <div class="cookies-consent__dialog">
      <button type="button" class="cookies-consent__close js-close" aria-label="Close">
        <span class="fas fa-times" aria-hidden="true"></span>
        <div class="sr-only">{{ data.closeButtonLabel }}</div>
      </button>

      {% if data.h1 %}
        <h5 class="h1">{{ data.h1 }}</h5>
      {% endif %}

      {% if data.body %}
        <div class="cookies-consent__body">
          {{ data.body|safe }}
        </div>
      {% endif %}

      <button class="btn btn-primary js-accept" type="button">{{ data.acceptButtonText }}</button>
    </div>
  </div>
{% endmacro %}

