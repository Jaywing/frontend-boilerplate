{# Import Macros #}
{%- from "_macros/_open-graph.njk" import OpenGraph -%}
{%- from "_macros/_seo.njk" import Seo -%}
{%- from "_macros/_twitter-card.njk" import TwitterCard -%}
{%- from "_macros/_footer.njk" import Footer -%}
{%- from "_macros/_navbar.njk" import Navbar -%}
{%- from "_macros/_skip-nav.njk" import SkipNav -%}

<!DOCTYPE html>
<html lang="en" dir="ltr" class="h-100">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {{ Seo({
      "seoUrl": page.pageUrl,
      "seoTitle": page.pageTitle,
      "seoDescription": page.pageDescription
    }) }}

    {{ OpenGraph({
      "ogTitle": page.pageTitle,
      "ogDescription": page.pageDescription,
      "ogUrl": page.pageUrl,
      "ogImageSrc": page.pageSocialImage,
      "ogImageWidth": "1200",
      "ogImageHeight": "630"
    }) }}

    {{ TwitterCard({
      "twitterCard": "summary",
      "twitterSite": "@username",
      "twitterTitle": page.pageTitle,
      "twitterDescription": page.pageDescription,
      "twitterImage": page.pageSocialImage,
      "twitterImageAlt": page.pageSocialImageAlt
    }) }}

    {% block styles %}
      <link rel="stylesheet" type="text/css" href="/assets/css/main.css?cbt=1">
    {% endblock %}
  </head>

  <body class="d-flex flex-column" id="top" style="min-height:100%">
    {% block skipNav %}
      {% include "_macros/_skip-nav.njk" %}
    {% endblock %}

    {% block header %}
      {{ Navbar(navbar.menuItems) }}
    {% endblock %}

    <main id="content">
      {% block main %}{% endblock %}
    </main>

    {% block footer %}
      {{ Footer(socialMediaLinks) }}
    {% endblock %}

    {% block scripts %}
      <script src="/assets/js/main.js?cbt=1"></script>
    {% endblock %}
  </body>
</html>